{# templates/agent/choose_sheet.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}
    {{ 'chooseSheet'|trans }}
{% endblock %}
{% block body %}
    <turbo-frame id="import_frame">
        <h1>{{ 'chooseSheetAnalyse'|trans }}</h1>
        <p class="fs-5 col-md-8">Quickly and easily get started with Bootstrap's compiled, production-ready files with this barebones example featuring some basic HTML and helpful links. Download all our examples to get started.</p>
        {{ form_start(sheetForm, { 'action': path('agent_choose_sheet'), 'attr': { 'data-turbo-frame': 'import_frame', 'class': 'row g-3' } }) }}
        <div class="input-group mb-12">
            {{ form_widget(sheetForm) }}
        </div>
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">{{ 'Analyse'|trans }}</button>
        </div>
        {{ form_end(sheetForm) }}

    </turbo-frame>
{% endblock %}